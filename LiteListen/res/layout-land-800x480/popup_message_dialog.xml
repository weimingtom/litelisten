<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_height="wrap_content" android:id="@+id/layPopupMessage" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/dialog_bg" android:layout_width="400dip">
	<LinearLayout android:id="@+id/layTitle" android:gravity="center_vertical"
		android:layout_marginRight="6.5dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="6.5dip">
		<ImageView android:layout_marginBottom="5dip"
			android:layout_width="55dip" android:id="@+id/imgIcon"
			android:layout_height="55dip" android:layout_marginLeft="5dip"
			android:layout_marginTop="5dip"></ImageView>
		<TextView android:shadowDx="1" android:textSize="25dip" android:layout_marginRight="5dip"
			android:textColor="#FFFFFF" android:marqueeRepeatLimit="marquee_forever"
			android:shadowDy="1" android:shadowRadius="3" android:id="@+id/txtTitle"
			android:layout_width="fill_parent" android:singleLine="true"
			android:ellipsize="marquee" android:layout_height="wrap_content"
			android:shadowColor="#333333" android:layout_marginLeft="10dip"></TextView>
	</LinearLayout>
	<ScrollView android:layout_marginBottom="10dip"
		android:scrollbarThumbVertical="@drawable/scroll_track"
		android:layout_marginRight="16.5dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/scrMessage"
		android:layout_marginLeft="16.5dip" android:layout_marginTop="10dip">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/layMessage" android:orientation="vertical"
			android:layout_width="fill_parent">
			<TextView android:shadowDx="0.5" android:textSize="20dip" android:textColor="#FFFFFF"
				android:shadowDy="0.5" android:shadowRadius="0.5" android:id="@+id/txtMessage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:shadowColor="#0099FF"></TextView>
			<LinearLayout android:id="@+id/layButton"
				android:gravity="center_vertical|center_horizontal|center"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<Button android:shadowColor="#0099FF" android:shadowRadius="3"
					android:textColor="#FFFFFF" android:shadowDy="0"
					android:background="@layout/alertdialog_button"
					android:layout_marginRight="10dip" android:text="@string/global_ok"
					android:id="@+id/btnOK" android:shadowDx="0"
					android:layout_marginBottom="5dip" android:layout_width="135dip"
					android:layout_height="45dip" android:layout_marginLeft="10dip"
					android:layout_marginTop="5dip"></Button>
				<Button android:shadowColor="#0099FF" android:shadowRadius="3"
					android:textColor="#FFFFFF" android:shadowDy="0"
					android:background="@layout/alertdialog_button"
					android:layout_marginRight="10dip" android:text="@string/global_cancel"
					android:id="@+id/btnCancel" android:shadowDx="0"
					android:layout_marginBottom="5dip" android:layout_width="135dip"
					android:layout_height="45dip" android:layout_marginLeft="10dip"
					android:layout_marginTop="5dip"></Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
