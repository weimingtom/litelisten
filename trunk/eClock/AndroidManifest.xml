<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="com.littledai.eclock">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <!--程序设置-->
        <activity android:label="@string/title_main" android:name="com.littledai.eclock.Settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        
		<!--桌面小部件设置-->
        <receiver android:name="com.littledai.eclock.Widget">
            <meta-data android:name="android.appwidget.provider" android:resource="@layout/widget_provider" />
            <intent-filter>
            	<action android:name="cn.aaronsoft.atime" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>
    </application>
</manifest>