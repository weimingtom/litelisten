				android:resource="@xml/widget_provider_small" />
			<intent-filter>
				<action android:name="com.littledai.litelisten" />
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="com.littledai.intent.action.refresh.lrc" />
				<action android:name="com.littledai.intent.action.refresh.timentitle" />
				<action android:name="com.littledai.intent.action.is.playing" />
