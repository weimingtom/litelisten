<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_height="wrap_content"
	android:id="@+id/layPopupList" xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/dialog_bg" android:layout_width="300dip">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_marginLeft="6.5dip" android:layout_marginRight="6.5dip"
		android:id="@+id/layTitle" android:gravity="center_vertical"
		android:layout_width="fill_parent">
		<ImageView android:layout_height="55dip"
			android:layout_marginLeft="5dip" android:layout_marginTop="5dip"
			android:id="@+id/imgIcon" android:layout_width="55dip"
			android:layout_marginBottom="5dip"></ImageView>
		<TextView android:layout_height="wrap_content"
			android:shadowDx="1" android:layout_marginRight="5dip"
			android:shadowDy="1" android:textSize="25dip" android:ellipsize="marquee"
			android:layout_width="fill_parent" android:shadowColor="#333333"
			android:layout_marginLeft="10dip" android:shadowRadius="3"
			android:id="@+id/txtTitle" android:textColor="#FFFFFF"
			android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"></TextView>
	</LinearLayout>
<RelativeLayout android:layout_width="fill_parent"
						android:id="@+id/layFileSelector" android:layout_marginBottom="10dip" android:layout_marginLeft="16.5dip" android:layout_marginRight="16.5dip" android:layout_marginTop="10dip" android:layout_below="@+id/layTitle" android:layout_height="250dip">
						<TextView android:id="@+id/txtCurrentPath"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:textSize="18dip" android:textColor="#FFFFFF"
							android:text="/sdcard" android:layout_marginLeft="5dip"
							android:layout_marginRight="5dip"></TextView>
						<ListView android:layout_width="fill_parent"
							android:layout_height="fill_parent" android:id="@+id/lstFile"
							android:layout_below="@+id/txtCurrentPath" android:cacheColorHint="#00000000" android:divider="#00000000"
							android:listSelector="@layout/list_file_selector"
							android:scrollbarThumbVertical="@drawable/scroll_track"
							android:smoothScrollbar="true"></ListView>
					</RelativeLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_marginLeft="6.5dip" android:layout_marginRight="6.5dip"
		android:id="@+id/layButton" android:gravity="center_vertical|center_horizontal|center"
		android:layout_width="fill_parent" android:layout_below="@+id/layFileSelector">
		<Button android:layout_height="45dip" android:textColor="#FFFFFF"
			android:shadowDx="0" android:layout_width="135dip" android:id="@+id/btnOK"
			android:shadowColor="#0099FF" android:shadowDy="0"
			android:shadowRadius="3" android:background="@layout/alertdialog_button"
			android:text="@string/global_ok" android:layout_marginBottom="10dip"
			android:layout_marginTop="5dip"></Button>
		<Button android:layout_height="45dip" android:textColor="#FFFFFF"
			android:shadowDx="0" android:layout_width="135dip" android:id="@+id/btnCancel"
			android:shadowColor="#0099FF" android:shadowDy="0"
			android:shadowRadius="3" android:background="@layout/alertdialog_button"
			android:text="@string/global_cancel" android:layout_marginBottom="10dip"
			android:layout_marginTop="5dip"></Button>
	</LinearLayout>
</RelativeLayout>