
<RelativeLayout android:id="@+id/layActivity"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bg_land_default">
	<LinearLayout android:id="@+id/laySplash"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:background="@drawable/splash_land" android:gravity="bottom">
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/txtVersion"
			android:text="@string/global_app_version" android:textColor="#FFFFFF" android:layout_marginBottom="2.5dip" android:layout_marginLeft="5dip"></TextView>
	</LinearLayout>
	<RelativeLayout android:id="@+id/layMain"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/laySplash">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:id="@+id/layHeader">
			<TextView android:layout_marginRight="5dip"
				android:ellipsize="marquee" android:id="@+id/txtTitle"
				android:marqueeRepeatLimit="marquee_forever" android:singleLine="true"
				android:layout_width="fill_parent" android:gravity="center_vertical|center_horizontal|center"
				android:layout_marginLeft="105dip" android:layout_height="47dip"
				android:textSize="25dip" android:shadowColor="#000000"
				android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
				android:textColor="#9BD7FF"></TextView>



		</LinearLayout>
		<RelativeLayout android:id="@+id/layBody"
			android:layout_below="@+id/layHeader"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_above="@+id/layBottom">
			<RelativeLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_toLeftOf="@+id/grdMenu" android:id="@+id/layVertical">
				<RelativeLayout android:id="@+id/laySearch" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone">
					<EditText android:id="@+id/txtKeyword" android:lines="1" android:layout_marginLeft="5dip" android:layout_height="wrap_content" android:paddingLeft="8dip" android:shadowDx="0" android:singleLine="true" android:hint="@string/srcmain_keyword_hint" android:shadowRadius="1" android:shadowDy="0" android:background="@drawable/txt_keyword" android:shadowColor="#0099FF" android:textColorHint="#FFFFFF" android:layout_marginTop="5dip" android:paddingRight="42dip" android:layout_alignParentLeft="true" android:layout_width="wrap_content" android:layout_toLeftOf="@+id/btnSearch"></EditText>
					<ImageButton android:layout_marginTop="5dip" android:id="@+id/btnSearch" android:layout_width="wrap_content" android:background="@layout/btn_search" android:layout_alignParentRight="true" android:layout_height="41.5dip"></ImageButton>
				</RelativeLayout>
				<RelativeLayout android:id="@+id/layCore" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@+id/laySearch">
					<ListView android:layout_height="fill_parent" android:layout_below="@+id/laySearch" android:scrollbarThumbVertical="@drawable/scroll_track" android:smoothScrollbar="true" android:listSelector="@layout/list_music_selector" android:cacheColorHint="#00000000" android:divider="#00000000" android:id="@+id/lstMusic" android:layout_width="fill_parent" android:layoutAnimation="@anim/list_item_alpha_translate_layout_anim"></ListView>
					<TextView android:paddingRight="5dip" android:paddingLeft="5dip" android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal|center" android:shadowColor="#0099FF" android:shadowRadius="1" android:shadowDx="1" android:textSize="18dip" android:id="@+id/txtLRC" android:shadowDy="1" android:layout_toRightOf="@+id/lstMusic" android:layout_width="fill_parent" android:textColor="#FFFFFF"></TextView>
				</RelativeLayout>
			</RelativeLayout>
			<GridView android:id="@+id/grdMenu"
				android:horizontalSpacing="10dip" android:gravity="center_vertical|center_horizontal|center" android:listSelector="@layout/list_menu_selector" android:verticalSpacing="10dip" android:background="@drawable/bg_control_panel_land" android:layout_width="230dip" android:layout_alignParentRight="true" android:layout_height="235dip" android:numColumns="3" android:layout_marginTop="5dip" android:visibility="gone" android:paddingTop="10dip"></GridView>
		</RelativeLayout>
		<LinearLayout android:id="@+id/layBottom"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_vertical">
			<LinearLayout android:id="@+id/layControlPanel"
				android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal|center" android:layout_width="315dip">
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnLast" android:layout_width="wrap_content"
					android:background="@layout/btn_last"></ImageButton>
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnPlay" android:layout_width="wrap_content"
					android:background="@layout/btn_play" android:layout_marginLeft="55dip"></ImageButton>
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnPause" android:layout_width="wrap_content"
					android:background="@layout/btn_pause" android:visibility="gone"
					android:layout_marginLeft="70dip"></ImageButton>
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnNext" android:layout_width="wrap_content"
					android:background="@layout/btn_next" android:layout_marginLeft="55dip"></ImageButton>
			</LinearLayout>
			<SeekBar android:paddingLeft="15dip" android:maxHeight="10dip"
				android:layout_height="wrap_content" android:thumb="@layout/seek_bar_thumb"
				android:progressDrawable="@layout/seek_bar_progress"
				android:paddingRight="15dip" android:id="@+id/skbMusic" android:layout_width="315dip" android:visibility="gone"></SeekBar>
			<TextView android:gravity="center_vertical" android:shadowColor="#000000" android:layout_width="110dip" android:layout_height="wrap_content" android:shadowRadius="0.5" android:shadowDx="1" android:layout_marginLeft="10dip" android:textSize="18dip" android:id="@+id/txtTime" android:shadowDy="1" android:text="00:00 / 00:00" android:textColor="#FFFFFF"></TextView>
			<ImageButton android:id="@+id/btnPlayMode" android:layout_width="wrap_content" android:background="@drawable/btn_play_mode_repeat_all" android:layout_marginLeft="3dip" android:layout_height="wrap_content"></ImageButton>
			<ImageButton android:id="@+id/btnLRC" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@layout/btn_lrc"></ImageButton>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
