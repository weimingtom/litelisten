
<RelativeLayout android:id="@+id/layActivity"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg_port_default">
	<LinearLayout android:id="@+id/laySplash"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:background="@drawable/splash_port" android:gravity="bottom|right">
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/txtVersion"
			android:text="@string/global_app_version" android:layout_marginRight="5dip"
			android:layout_marginBottom="2.5dip" android:textColor="#FFFFFF"></TextView>
	</LinearLayout>
	<RelativeLayout android:id="@+id/layMain"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/laySplash">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:id="@+id/layHeader">
			<TextView android:layout_marginRight="5dip"
				android:ellipsize="marquee" android:id="@+id/txtTitle"
				android:marqueeRepeatLimit="marquee_forever" android:singleLine="true"
				android:layout_width="fill_parent" android:gravity="center_vertical|center_horizontal|center"
				android:layout_marginLeft="105dip" android:layout_height="47dip"
				android:textSize="25dip" android:shadowColor="#000000"
				android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
				android:textColor="#9BD7FF"></TextView>
			<LinearLayout android:layout_height="wrap_content"
				android:id="@+id/layInfo" android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:gravity="center_vertical"
					android:textSize="18dip" android:id="@+id/txtTime" android:text="00:00 / 00:00"
					android:layout_marginLeft="5dip" android:layout_width="110dip"
					android:layout_marginTop="1dip" android:shadowColor="#000000"
					android:shadowDx="1" android:shadowDy="1" android:shadowRadius="0.5"></TextView>
				<ImageButton android:layout_height="fill_parent"
					android:layout_width="wrap_content" android:background="@drawable/btn_play_mode_repeat_all"
					android:id="@+id/btnPlayMode" android:layout_marginTop="1dip"></ImageButton>
				<ImageButton android:layout_width="wrap_content"
					android:background="@layout/btn_lrc" android:id="@+id/btnLRC"
					android:layout_height="wrap_content" android:layout_marginTop="1dip"></ImageButton>
			</LinearLayout>



		</LinearLayout>
		<RelativeLayout android:id="@+id/layBody"
			android:layout_width="wrap_content" android:layout_below="@id/layHeader"
			android:layout_height="427dip" android:layout_above="@+id/layBottom">
			<RelativeLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/laySearch" android:visibility="gone">
				<EditText android:id="@+id/txtKeyword" android:lines="1" android:text="EditText" android:paddingLeft="8dip" android:shadowDx="0" android:singleLine="true" android:hint="@string/srcmain_keyword_hint" android:shadowRadius="1" android:layout_height="wrap_content" android:shadowDy="0" android:background="@drawable/txt_keyword" android:shadowColor="#0099FF" android:layout_marginLeft="5dip" android:layout_marginTop="5dip" android:textColorHint="#FFFFFF" android:paddingRight="42dip" android:layout_width="fill_parent" android:layout_toLeftOf="@+id/btnSearch"></EditText>
				<ImageButton android:layout_marginTop="5dip" android:id="@+id/btnSearch" android:layout_width="wrap_content" android:layout_height="41dip" android:background="@layout/btn_search" android:layout_alignParentRight="true"></ImageButton>
			</RelativeLayout>
			<RelativeLayout android:layout_height="wrap_content"
				android:id="@+id/layCore" android:layout_width="fill_parent"
				android:layout_below="@id/laySearch" android:layout_above="@+id/grdMenu">
				<ListView android:smoothScrollbar="true"
					android:layout_below="@id/laySearch" android:cacheColorHint="#00000000"
					android:layout_width="fill_parent" android:id="@+id/lstMusic"
					android:layoutAnimation="@anim/list_item_alpha_translate_layout_anim"
					android:divider="#00000000" android:scrollbarThumbVertical="@drawable/scroll_track"
					android:listSelector="@layout/list_music_selector"
					android:layout_height="fill_parent"></ListView>
				<TextView android:textSize="18dip"
					android:shadowDy="1" android:shadowColor="#0099FF"
					android:paddingLeft="5dip" android:shadowDx="1"
					android:gravity="center_vertical|center_horizontal|center"
					android:layout_width="fill_parent" android:id="@+id/txtLRC"
					android:paddingRight="5dip" android:textColor="#FFFFFF"
					android:shadowRadius="1" android:layout_toRightOf="@id/lstMusic"
					android:layout_height="fill_parent"></TextView>
			</RelativeLayout>
			<GridView android:layout_width="wrap_content"
				android:background="@drawable/bg_control_panel_port" android:id="@+id/grdMenu"
				android:layout_alignParentBottom="true" android:layout_height="158dip"
				android:visibility="gone" android:horizontalSpacing="10dip" android:gravity="center_vertical|center_horizontal|center" android:listSelector="@layout/list_menu_selector" android:numColumns="4" android:verticalSpacing="10dip" android:paddingTop="5dip"></GridView>
		</RelativeLayout>
		<LinearLayout android:id="@+id/layBottom"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
			<LinearLayout android:id="@+id/layControlPanel"
				android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal|center"
				android:layout_width="fill_parent" android:layout_marginLeft="10dip">
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnLast" android:layout_width="wrap_content"
					android:background="@layout/btn_last"></ImageButton>
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnPlay" android:layout_width="wrap_content"
					android:background="@layout/btn_play" android:layout_marginLeft="70dip"></ImageButton>
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnPause" android:layout_width="wrap_content"
					android:background="@layout/btn_pause" android:visibility="gone"
					android:layout_marginLeft="70dip"></ImageButton>
				<ImageButton android:layout_height="wrap_content"
					android:id="@+id/btnNext" android:layout_width="wrap_content"
					android:background="@layout/btn_next" android:layout_marginLeft="70dip"></ImageButton>
			</LinearLayout>
			<SeekBar android:paddingLeft="15dip" android:maxHeight="10dip"
				android:layout_height="wrap_content" android:thumb="@layout/seek_bar_thumb"
				android:progressDrawable="@layout/seek_bar_progress"
				android:paddingRight="15dip" android:layout_width="fill_parent"
				android:id="@+id/skbMusic" android:visibility="gone"></SeekBar>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
