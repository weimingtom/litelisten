<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layActivity" android:background="@drawable/bg_port_default">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/laySplash"
		android:background="@drawable/splash_port" android:gravity="bottom|right">
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/txtVersion"
			android:text="@string/global_app_version" android:layout_marginRight="5dip"
			android:layout_marginBottom="2.5dip" android:textColor="#FFFFFF"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/layMain"
		android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:id="@+id/layHeader">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/layAppTitle">
				<TextView android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:textSize="18dip"
					android:singleLine="true" android:layout_width="wrap_content"
					android:text="@string/global_app_name" android:layout_marginLeft="22dip"
					android:id="@+id/txtAppTitle" android:layout_marginTop="-2dip"></TextView>
			</LinearLayout>
			<TextView android:layout_height="wrap_content"
				android:layout_marginRight="5dip" android:textColor="#FFFFFF"
				android:ellipsize="marquee" android:id="@+id/txtTitle"
				android:marqueeRepeatLimit="marquee_forever"
				android:layout_marginLeft="5dip" android:singleLine="true"
				android:shadowDy="0.5" android:shadowRadius="0.5"
				android:text="@string/global_app_name" android:shadowDx="0.5"
				android:layout_width="fill_parent" android:textSize="18dip"
				android:gravity="center_vertical|center_horizontal|center"
				android:shadowColor="#000000"></TextView>
			<LinearLayout android:layout_height="wrap_content"
				android:id="@+id/layInfo" android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:gravity="center_vertical"
					android:textSize="18dip" android:id="@+id/txtTime" android:text="00:00 / 00:00"
					android:layout_marginLeft="5dip" android:layout_width="110dip"
					android:layout_marginTop="1dip"></TextView>
				<ImageButton android:layout_height="fill_parent"
					android:layout_width="wrap_content" android:background="@drawable/btn_play_mode_repeat_all"
					android:id="@+id/btnPlayMode" android:layout_marginTop="1dip"></ImageButton>
				<ImageButton android:layout_width="wrap_content"
					android:background="@layout/btn_lrc" android:id="@+id/btnLRC"
					android:layout_height="wrap_content" android:layout_marginTop="1dip"></ImageButton>
			</LinearLayout>



		</LinearLayout>


		<AbsoluteLayout android:id="@+id/layBody"
			android:layout_width="fill_parent" android:layout_height="427dip">
			<ListView android:layout_height="fill_parent"
				android:layout_width="fill_parent" android:listSelector="@layout/list_music_selector"
				android:scrollbarThumbVertical="@drawable/scroll_track"
				android:smoothScrollbar="true" android:divider="#00000000"
				android:id="@+id/lstMusic" android:cacheColorHint="#00000000"
				android:layoutAnimation="@anim/list_item_alpha_translate_layout_anim"></ListView>
			<LinearLayout android:background="@drawable/bg_port_list_highlight"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:id="@+id/layHighlight" android:visibility="invisible">
				<ImageView android:layout_width="wrap_content" android:id="@+id/imgAlbumHighlight"
					android:background="@drawable/album_selected"
					android:layout_height="wrap_content" android:layout_marginLeft="7dip"></ImageView>
				<LinearLayout android:id="@+id/layHighlightPlay"
					android:layout_height="fill_parent" android:layout_width="fill_parent"
					android:gravity="right|center_vertical|center">
					<ImageButton android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_marginRight="7dip"
						android:layout_marginBottom="2dip" android:id="@+id/btnHighlightPlay"
						android:background="@layout/bg_list_highlight_play"
						android:layout_marginTop="2dip"></ImageButton>
				</LinearLayout>
			</LinearLayout>
			<TextView android:id="@+id/txtLRC" android:textColor="#FFFFFF"
				android:shadowColor="#0099FF" android:gravity="center_vertical|center_horizontal|center"
				android:paddingLeft="5dip" android:paddingRight="5dip"
				android:layout_x="320dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_y="200dip"
				android:textSize="18dip" android:shadowDx="0.5" android:shadowDy="0.5"
				android:shadowRadius="0.5"></TextView>



			<TextView android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/txtScanHint"
				android:gravity="right|center_vertical" android:paddingRight="5dip"
				android:paddingLeft="5dip" android:textColor="#FFFFFF"
				android:visibility="gone"></TextView>
			<LinearLayout android:orientation="horizontal"
				android:background="@drawable/lay_search" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/laySearch"
				android:layout_y="-65dip">
				<EditText android:layout_marginTop="11dip"
					android:textColorHint="#AAAAAA" android:background="@drawable/txt_keyword"
					android:hint="@string/srcmain_keyword_hint" android:lines="1"
					android:layout_marginLeft="8dip" android:paddingLeft="8dip"
					android:layout_height="wrap_content" android:id="@+id/txtKeyword"
					android:singleLine="true" android:paddingRight="42dip"
					android:layout_width="260dip"></EditText>
				<ImageButton android:layout_width="wrap_content"
					android:id="@+id/btnSearch" android:layout_marginTop="11dip"
					android:background="@layout/btn_search" android:layout_height="48dip"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:orientation="vertical" android:layout_width="wrap_content"
				android:background="@drawable/bg_control_panel_port" android:id="@+id/layExtendMenu"
				android:paddingLeft="5dip" android:paddingRight="5dip"
				android:paddingTop="10dip" android:visibility="gone"
				android:layout_y="267dip">








				<GridView android:layout_height="wrap_content" android:id="@+id/grdMenu"
					android:layout_width="fill_parent" android:listSelector="@layout/list_menu_selector"
					android:numColumns="4" android:gravity="center_vertical|center_horizontal|center"></GridView>




			</LinearLayout>
		</AbsoluteLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/layControlPanel" android:gravity="center_vertical|center_horizontal|center">
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnLast"
				android:background="@layout/btn_last"></ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnPlay"
				android:background="@layout/btn_play" android:layout_marginLeft="70dip"></ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnPause"
				android:background="@layout/btn_pause" android:visibility="gone"
				android:layout_marginLeft="70dip"></ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnNext"
				android:background="@layout/btn_next" android:layout_marginLeft="70dip"></ImageButton>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:gravity="center_vertical|center_horizontal|center"
			android:id="@+id/layMusicSeek">
			<SeekBar android:layout_height="wrap_content" android:id="@+id/skbMusic"
				android:layout_width="fill_parent" android:thumb="@layout/seek_bar_thumb"
				android:progressDrawable="@layout/seek_bar_progress"
				android:maxHeight="10dip" android:paddingRight="15dip"
				android:paddingLeft="15dip"></SeekBar>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>