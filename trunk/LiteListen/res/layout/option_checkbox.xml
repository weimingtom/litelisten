<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 已经选中，且被按下 -->
	<item android:state_pressed="true" android:state_checked="true"
		android:drawable="@drawable/bg_setting_checked_focused" />
	<!-- 未被选中，且被按下 -->
	<item android:state_pressed="true" android:state_checked="false"
		android:drawable="@drawable/bg_setting_unchecked_focused" />
	<!-- 已经选中，且被聚焦 -->
	<item android:state_checked="true" android:state_focused="true"
		android:drawable="@drawable/bg_setting_checked_focused" />
	<!-- 未被选中，且被聚焦 -->
	<item android:state_checked="false" android:state_focused="true"
		android:drawable="@drawable/bg_setting_unchecked_focused" />
	<!-- 未被选中
	<item android:state_checked="false"
		android:drawable="@drawable/bg_setting_normal_middle" /> -->
	<!-- 已经选中 -->
	<item android:state_checked="true"
		android:drawable="@drawable/bg_setting_checked_nofocus" />
</selector>